              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "regusername": {
                    "type": "string"
                  },
                  "regpassword": {
                    "type": "string"
                  },
                  "verificationCode": {
                    "type": "integer"
                  }
                },
                "required": [
                  "email",
                  "regusername",
                  "regpassword",
                  "verificationCode"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful registration",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
